{
  "$schema": "https://schema.linearmouse.app/0.10.1-beta.2",
  "schemes": [
    {
      "buttons": {
        "clickDebouncing": {
          "buttons": [3, 4, 2],
          "timeout": 500
        },
        "mappings": [
          {
            "button": 0,
            "action": "mouse.button.left",
            "control": true
          },
          {
            "button": 1,
            "action": { "run": "Users/q/.config/sketchybar/plugins/click_week.sh" },
            "command": true,
            "option": true
          },
          {
            "button": 2,
            "action": "lookUpAndDataDetectors",
            "option": true
          },
          {
            "button": 3,
            "action": { "keyPress": ["commandRight", "0"] },
            "option": true
          },
          {
            "button": 3,
            "action": "appExpose",
            "command": true,
            "option": true
          },
          {
            "button": 4,
            "action": "smartZoom",
            "option": true
          },
          {
            "button": 4,
            "action": "missionControl",
            "command": true,
            "option": true
          }
        ],
        "universalBackForward": true
      },
      "if": {
        "device": {
          "category": "mouse",
          "productID": "0x82a",
          "productName": "Microsoft Pro Intellimouse",
          "vendorID": "0x45e"
        }
      },
      "pointer": {
        "acceleration": 0,
        "speed": 0.5
      },
      "scrolling": {
        "acceleration": 2.1,
        "distance": "auto",
        "modifiers": {
          "option": {
            "scale": 10,
            "type": "changeSpeed"
          }
        },
        "reverse": { "vertical": true },
        "speed": 21
      }
    },
    {
      "if": {
        "device": {
          "category": "trackpad",
          "productID": "0x0",
          "productName": "Apple Internal Keyboard / Trackpad",
          "vendorID": "0x0"
        }
      },
      "pointer": {
        "acceleration": 2,
        "speed": 1
      },
      "scrolling": {
        "modifiers": {
          "option": {
            "scale": 7,
            "type": "changeSpeed"
          }
        }
      }
    }
  ]
}
