#!/bin/bash

yabai -m display --focus next || yabai -m display --focus prev
sleep 0.01
cliclick $(yabai -m query --displays --display | jq -r '.frame | "m:\(.x + (.w/2) | floor),\(.y + (.h/2) | floor)"')
sleep 0.01
yabai -m window --focus mouse || osascript -e 'tell application "System Events" to tell process "Finder" to set frontmost to true'
sleep 0.01
cliclick $(yabai -m query --windows --window | jq -r '.frame | "m:\(.x + (.w/2) | floor),\(.y + (.h/2) | floor)"')
sleep 0.1
sketchybar --update
