#!/bin/bash

# yabai -m display --focus recent # only two displays, 
# yabai -m config mouse_follows_focus on
yabai -m display --focus next || yabai -m display --focus prev
sleep 0.01
cliclick $(yabai -m query --displays --display | jq -r '.frame | "m:\(.x + (.w/2) | floor),\(.y + (.h/2) | floor)"')
yabai -m window --focus mouse || osascript -e 'tell application "Finder" to activate' # skhd -k "ctrl + alt - e" # cliclick c:.
# yabai -m window --focus mouse
cliclick $(yabai -m query --windows --window | jq -r '.frame | "m:\(.x + (.w/2) | floor),\(.y + (.h/2) | floor)"')
# yabai -m config mouse_follows_focus off
# skhd -k "fn - x"
sleep 0.1
sketchybar --update
